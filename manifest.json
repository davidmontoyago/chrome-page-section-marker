{
  "manifest_version": 2,

  "name": "Page Section Marker",
  "description": "Bookmark sections in a page and go back to them easily.",
  "version": "0.1",

  "background": { 
	"scripts": ["background.js"] 
  },

  "page_action": {
	"default_icon": "mark.png",
	"default_title": "Page Section Marker"
  },	

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css":[
		"style.css", 
		"contextmenu/jquery.contextMenu.css",
		"jquery.qtip2-2.1.1.basic/jquery.qtip.min.css"
	   ],
      "js":[
		 "jquery-1.8.3.min.js", 
	     "jquery.qtip2-2.1.1.basic/jquery.qtip.min.js", 
	     "contextmenu/jquery.contextMenu.js"
	   ]
    }
  ], 

  "web_accessible_resources": [
	"mark.png"
  ],

  "permissions": [
	"tabs", 
	"http://*/*",
	"https://*/*"
  ]
}
